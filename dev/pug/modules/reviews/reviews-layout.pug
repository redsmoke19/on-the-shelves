ul.reviews__list
  each item in reviews
    li.reviews__item
      .reviews__wrapper
        .reviews__info
          .reviews__box-images
            img.reviews__img(src= item.photo alt="Фото автора отзыва" width="80" height="80")
          .reviews__box
            h3.reviews__name= item.name
            if item.gender === "male"
              p.reviews__count Купил #{item.booksCount} книг
            else if item.gender === "female"
              p.reviews__count Купила #{item.booksCount} книг
        p.reviews__review= item.review
